<h2>Edit Vehicle</h2>

<% if @vehicle.errors.any? %>
    <div class="error-messages">
        <h4>There were errors while saving the vehicle:</h4>
        <ul>
            <% @vehicle.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @vehicle, data: { turbo: false }, class: "vehicle-form" do |f| %>
    <div class="form-group">
        <%= f.label :brand, 'Brand', class: "form-label" %>
        <%= f.text_field :brand, class: "form-control", placeholder: "Enter brand name" %>
    </div>

    <div class="form-group">
        <%= f.label :model, 'Model', class: "form-label" %>
        <%= f.text_field :model, class: "form-control", placeholder: "Enter vehicle model" %>
    </div>

    <div class="form-group">
        <%= f.label :year, 'Year', class: "form-label" %>
        <%= f.number_field :year, class: "form-control", placeholder: "Enter vehicle year" %>
    </div>

    <div class="form-group">
        <%= f.label :plate, 'Plate', class: "form-label" %>
        <%= f.text_field :plate, class: "form-control", placeholder: "Enter license plate" %>
    </div>

    <div class="form-group">
        <%= f.label :kind, 'Kind', class: "form-label" %>
        <%= f.number_field :kind, class: "form-control", placeholder: "Enter vehicle type (e.g., 1 for car, 2 for truck)" %>
    </div>

    <div class="form-actions">
        <%= f.submit 'Update Vehicle', class: "btn btn-primary" %>
    </div>
<% end %>

<p><%= link_to 'Return', vehicles_path, class: "btn btn-secondary" %></p>
