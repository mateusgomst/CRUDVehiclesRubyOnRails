<h2 class="form-title">New Vehicle</h2>

<% if @vehicle.errors.any? %>
    <div class="error-messages">
        <ul>
            <% @vehicle.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @vehicle, data: { turbo: false }, class: "vehicle-form" do |f| %>
    <div class="form-group">
        <%= f.label :brand, 'Brand', class: 'form-label' %>
        <%= f.text_field :brand, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :model, 'Model', class: 'form-label' %>
        <%= f.text_field :model, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :year, 'Year', class: 'form-label' %>
        <%= f.number_field :year, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :plate, 'Plate', class: 'form-label' %>
        <%= f.text_field :plate, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :kind, 'Kind', class: 'form-label' %>
        <%= f.number_field :kind, class: 'form-control' %>
    </div>

    <div class="form-actions">
        <%= f.submit 'Create Vehicle', class: 'btn btn-primary' %>
    </div>
<% end %>

<p><%= link_to 'Return', vehicles_path, class: 'btn btn-secondary' %></p>

